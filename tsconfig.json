{
  "compilerOptions": {
    "suppressExcessPropertyErrors": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6",
      "es2019"
    ],
    "sourceMap": true
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
